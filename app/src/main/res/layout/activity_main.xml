<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/test_receipt"
        />
    <TextView
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Bienvenido a SmartSplit"
        android:textSize="24sp"
        android:paddingBottom="32dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escanea, divide y guarda tus facturas"
        android:textSize="14dp"
        android:textColor="#616161"/>
    <Button
        android:id="@+id/buttonStartCamera"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:backgroundTint="@color/ver"
        android:layout_margin="15dp"
        android:layout_height="wrap_content"
        android:text="Capturar ticket" />


    <Button
        android:id="@+id/btnHistorial"
        android:layout_width="match_parent"
        android:backgroundTint="@color/ver"
        android:layout_margin="15dp"

        android:layout_height="wrap_content"
        android:text="Historial" />

</LinearLayout>